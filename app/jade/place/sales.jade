extends ../templates/place.jade

block title
  | Акции

block content
  .place-page__body.place-sales
    section.place-sales__main
      .place-sales__title Акции 
        span.place-sales__number 9
      ul.place-sales__list
        - for (var i = 0; i < 3; i++)
          li.place-sales__item.place-sale
            .place-sale__photo-container
              img.place-sale__photo
            .place-sale__body
              a.place-sale__link
                h3.place-sale__title Готовим сырный завтрак в Гуакамоле
              .place-sale__descr
                a.place-sale__sublink Гуакамоле,
                time.place-sale__date(datetime='2016-02-23T18:00') 23 февраля 2016, сб 18:00
              .place-sale__type Акция
    section.place-sales__new-places.new-places
      .new-places__topic.topic
        span.topic__name новые места на foxy
      ul.new-places__list
        - for (var x = 0; x < 3; x++)
          li.new-places__item
            a.new-places__photo-container
              img.new-places__photo
            .new-places__body
              .new-places__info
                span.new-places__name Ресторан Волгоград
                span.new-places__rating.rating(
                  data-rateit-readonly='true'
                  data-rateit-value='3.5'
                  )