extends ./templates/main.jade

block title
  | Place

block content
  .container
    main.place-page
      .place-page__breadcrumbs
        ul.breadcrumbs
          li.breadcrumbs__item
            a.breadcrumbs__link Главная
          li.breadcrumbs__item
            a.breadcrumbs__link Кафе и рестораны Волгограда
          li.breadcrumbs__item
            a.breadcrumbs__link Ресторан Волгоград
      .place-page__header.place-descr
        .place-descr__head.clearfix
          span.place-descr__tags Кафе, ресторан, бар, хинкальная
          .place-descr__subscription
            //- ul.place-descr__subs.clearfix
            //-   - for (var i = 0; i < 6; i++)
            //-     li.place-descr__sub
            //-       a.place-descr__sub-link
            .place-descr__subscribe
              .sticker-button
                button.button.button_subscr.button_check.sticker-button__button(disabled) Я подписан
                span.sticker 667
        h1.place-descr__name Ресторан «Онегин»
        .place-descr__rating
          span.place-descr__rating-stars.rating(data-rateit-readonly='true', data-rateit-value='3.5')
          span.place-descr__rating-text
            | №13 из 289
            span.place-descr__rating-descr в категории Кафе и рестораны Волгограда
        .place-descr__adaptive-actions
          a.place-descr__adaptive-subscrive(href='#') Подписаться
          a.place-descr__adaptive-review(href='#') Оставить отзыв
          a.place-descr__adaptive-favorites(href='#')
        .place-descr__menu.clearfix
          ul.place-descr__tabs.tabs
            li.tabs__item
              a.tabs__link(href='place/overview.html') Обзор
            li.tabs__item
              a.tabs__link(href='place/reviews.html') Отзывы 
                span.tabs__number 118
            li.tabs__item
              a.tabs__link(href='place/photos.html') Фотографии 
                span.tabs__number 34
            li.tabs__item
              a.tabs__link(href='place/events.html') События 
                span.tabs__number 1
            li.tabs__item
              a.tabs__link(href='place/sales.html') Акции 
                span.tabs__number 8
          .place-descr__actions
            .place-descr__favs
              button.button.button_second В закладки
            .place-descr__review
              button.button.button_first Оставить отзыв
      .place-page__main
        .place-page__body
        aside.place-page__sidebar
          .place-page__contacts.place-contacts
            .place-contacts__map#map
            .place-contacts__body
              .place-contacts__main
                .place-contacts__name Ресторан Волгоград
                p.place-contacts__address Пр-т им. В.И. Ленина, 59, Волгоград, Волгоградская обл.
              .place-contacts__schedule Пт-сб 08:00-24:00 
                a.place-contacts__schedule-link Все расписание
              .place-contacts__phone +7 988 025 14 61
              .place-contacts__site 
                a.place-contacts__site-link datasite.ru
            a.place-contacts__owners Для владельцев
            a.place-contacts__fix(data-modal='modal-error') Исправить неточность
          .place-page__city-events
            include ./organisms/city-events
          .place-page__blog
            include ./organisms/blog
          .place-page__discussions
            include ./organisms/discussions
      .modal#modal(data-id='modal-error')
        .modal__window
          .modal__head.clearfix
            span.modal__title Неточность в описании
            .modal__close#modal-close
          .modal__body
            .modal__ta.ta-box
              label.ta-box__label Что нужно исправить
              textarea.textarea.ta-box__ta(placeholder='Ваш текст')
          .modal__foot.clearfix
            .modal__actions
              button.modal__subaction#modal-sub Отмена
              button.button.button_first.modal__main-action Отправить

block scripts
  script(src='https://api-maps.yandex.ru/2.1/?lang=ru_RU', async)